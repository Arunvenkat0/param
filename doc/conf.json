{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.(ds|js)(doc)?$"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "recurse": true,
        "lenient": true,
        "template": "doc/template",
        "tutorials": "doc/tutorials"
    },
    "plugins": ["doc/demandware"]
}
