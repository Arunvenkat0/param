<iscontent type="text/html" charset="UTF-8" compact="true"/>
<isscript>
	var escapedUrl = url ? encodeURIComponent(url): '';
	var escapedTitle = title ? encodeURIComponent(title) : '';
</isscript>
<a class="share-icon" title="${Resource.msg('global.socialshare.facebook', 'locale', null)}" href="https://www.facebook.com/sharer/sharer.php?u=${escapedUrl}" target="_blank"><i class="fa fa-facebook-official"></i></a>
<a class="share-icon" title="${Resource.msg('global.socialshare.twitter', 'locale', null)}" href="https://twitter.com/intent/tweet/?url=${escapedUrl}&text=${escapedTitle}" target="_blank"><i class="fa fa-twitter"></i></a>
<a class="share-icon" title="${Resource.msg('global.socialshare.googleplus', 'locale', null)}" href="https://plus.google.com/share?url=${escapedUrl}" target="_blank"><i class="fa fa-google-plus"></i></a>
<a class="share-icon" title="${Resource.msg('global.socialshare.pinterest', 'locale', null)}" href="https://www.pinterest.com/pin/create/button/?url=${escapedUrl}&description=${escapedTitle}" target="_blank"><i class="fa fa-pinterest"></i></a>
<a class="share-icon" title="${Resource.msg('global.socialshare.email', 'locale', null)}" href="mailto:name@email.com?subject=${escapedTitle}&body=${escapedUrl}" target="_blank"><i class="fa fa-envelope"></i></a>