<iscontent type="text/html" charset="UTF-8" compact="true"/>
<isscript>
	var GetCurrentUrl = require('~/cartridge/scripts/util/GetCurrentUrl');
	var currentUrl = encodeURIComponent(GetCurrentUrl(pdict));
	var title = encodeURIComponent(pdict.Product.name);
</isscript>
<a class="share-icon" data-service="facebook" title="Share on Facebook" href="https://www.facebook.com/sharer/sharer.php?u=${currentUrl}" target="_blank"><i class="fa fa-facebook-official"></i></a>
<a class="share-icon" data-service="twitter" title="Share on Twitter" href="https://twitter.com/intent/tweet/?url=${currentUrl}&text=${title}" target="_blank"><i class="fa fa-twitter"></i></a>
<a class="share-icon" data-service="google-plus" title="Share on Google+" href="https://plus.google.com/share?url=${currentUrl}" target="_blank"><i class="fa fa-google-plus"></i></a>
<a class="share-icon" data-service="pinterest" title="Share on Pinterest" href="https://www.pinterest.com/pin/create/button/?url=${currentUrl}&description=${title}" target="_blank"><i class="fa fa-pinterest"></i></a>
<a class="share-icon" data-action="email" title="Email" href="mailto:name@email.com?subject=${title}&body=${currentUrl}" target="_blank"><i class="fa fa-envelope"></i></a>
