<iscontent type="text/html" charset="UTF-8" compact="true"/>
<isinclude template="util/modules"/>

<isset name="DecoratorTemplate" value="account/pt_account" scope="page"/>
<isif condition="${request.httpParameterMap.format.stringValue == 'ajax' || request.httpParameterMap.pwr.stringValue == 'true' || request.httpParameterMap.source.stringValue == 'search' || request.httpParameterMap.source.stringValue == 'quickview' || request.httpParameterMap.source.stringValue == 'cart'}">
	<isset name="DecoratorTemplate" value="util/pt_empty" scope="page"/>
</isif>

<isdecorate template="${DecoratorTemplate}">

	<isif condition="${pdict.Action == 'add'}">
		<h1>${Resource.msg('editaddress.addaddress','account',null)}</h1>
	<iselse/>
		<h1>${Resource.msg('editaddress.editaddress','account',null)}</h1>
	</isif>

	<form method="post" action="${URLUtils.httpsContinue()}" id="edit-address-form" name="${session.forms.profile.address.htmlName}">
		<fieldset>
			<legend>
				Address Details
				<div class="dialog-required"> <span class="required-indicator">&#8226; <em>${Resource.msg('global.requiredfield','locale',null)}</em></span></div>
			</legend>


			<isif condition="${pdict.Status != null && pdict.Status.isError()}">
				<!-- Use the error code value to build an appropriate error message -->
				<span class="form-error">
					<isprint value="${Resource.msg('addressdetails.' + pdict.Status.code, 'account',null)}"/>
				</span>
			</isif>

			<isinputfield formfield="${session.forms.profile.address.addressid}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.firstname}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.lastname}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.address1}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.address2}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.country}" type="select"/>

			<isinputfield formfield="${session.forms.profile.address.states.state}" type="select"/>

			<isinputfield formfield="${session.forms.profile.address.city}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.postal}" type="input"/>

			<isinputfield formfield="${session.forms.profile.address.phone}" type="input"/>

			<div class="form-field-tooltip" >
				(<a class="tooltip" href="${URLUtils.url('Page-Show', 'cid', 'help-telephone')}">
					${Resource.msg('singleshipping.phonerequired','checkout',null)}
					<div class="tooltip-content" data-layout="small">
						<iscontentasset aid="help-telephone"/>
					</div>
				</a>)
			</div>

			<div class="form-row form-row-button">
				<button class="apply-button" type="submit" name="${pdict.Action == 'add' ? session.forms.profile.address.create.htmlName : session.forms.profile.address.edit.htmlName}" value="${Resource.msg('global.apply','locale',null)}">
					${Resource.msg('global.apply','locale',null)}
				</button>
				<button class="cancel cancel-button" type="submit" name="${session.forms.profile.address.cancel.htmlName}" value="${Resource.msg('global.cancel','locale',null)}">
					${Resource.msg('global.cancel','locale',null)}
				</button>
				<isif condition="${pdict.Action != 'add'}">
					<input type="hidden" value="${pdict.Address.ID}" name="addressid" id="addressid" />
					<button class="delete-button delete cancel" type="submit" name="${session.forms.profile.address.remove.htmlName}" value="${Resource.msg('global.delete','locale',null)}">
						${Resource.msg('global.delete','locale',null)}
					</button>
				</isif>
			</div>

			<input type="hidden" name="${session.forms.profile.secureKeyHtmlName}" value="${session.forms.profile.secureKeyValue}"/>

		</fieldset>

	</form>
<isscript>
	importScript("util/ViewHelpers.ds");
	var addressForm = session.forms.profile.address;
	var countries = ViewHelpers.getCountriesAndRegions(addressForm);
	var json = JSON.stringify(countries);
</isscript>
<script>window.Countries = <isprint value="${json}" encoding="off"/>;</script>
</isdecorate>