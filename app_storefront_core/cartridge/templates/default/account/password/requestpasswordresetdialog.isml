<iscontent type="text/html" charset="UTF-8" compact="true"/>
<isset name="DecoratorTemplate" value="account/pt_account" scope="page"/>

<isif condition="${request.httpParameterMap.format.stringValue == 'ajax' }">
	<isset name="DecoratorTemplate" value="util/pt_empty" scope="page"/>
</isif>

<isdecorate template="${DecoratorTemplate}">

<isinclude template="util/modules"/>
	
	<h1>${Resource.msg('passwordreset.title2','account',null)}</h1>
	
	<isif condition="${pdict.ShowContinue}">
		<div class="confirmation-container" >	
	    	${Resource.msg('passwordreset.sent','account',null)}					
		</div><!-- END: confirmation-container -->	
	</isif>
	
	<isif condition="${pdict.ErrorCode != null}">
	 	<div class="error-form">
	 		<isprint value="${Resource.msg('passwordreset.' + pdict.ErrorCode, 'account',null)}"/>
	 	</div>
	</isif>
	
	<p>${Resource.msg('passwordreset.message','account',null)}</p>
	
	<form action="${URLUtils.https('Account-PasswordResetDialogForm')}"  method="post"   id="PasswordResetForm" name="${session.forms.requestpassword.htmlName}">
		
		<fieldset>	
			
			<isinputfield formfield="${session.forms.requestpassword.email}" type="input" rowclass="row-inline" />			

			<button type="submit" value="${Resource.msg('passwordreset.button','account',null)}" 
						name="${session.forms.requestpassword.send.htmlName}" data-dlg-action='{"isForm":true}' data-dlg-options='{"width":700,"height":250}' >
					${Resource.msg('passwordreset.button','account',null)}
			</button>
			
			<input type="hidden" name="${session.forms.requestpassword.secureKeyHtmlName}" value="${session.forms.requestpassword.secureKeyValue}"/>
			
		
		</fieldset>
		
	</form>
	
</isdecorate>