<?xml version="1.0" encoding="UTF-8"?>
<testcase xmlns="http://xlt.xceptance.com/xlt-script/2" version="4" junit-test="true">
  <tags>C130262</tags>
  <description>Test Case ID:(C130262)</description>
  <module name="library.module.app.busmgr.EnablePromotion">
    <parameter name="SiteName" value="${SiteName}"/>
    <parameter name="PromotionName" value="${PromotionName}"/>
  </module>
  <module name="library.module.app.sitegenesis.OpenShoppingSite"/>
  <action name="CheckNoPromotion"/>
  <module name="library.module.app.sitegenesis.OpenCatalogDisplayCategoryLevel3">
    <parameter name="Level1CategoryName" value="${CatalogLevel1}"/>
    <parameter name="Level2CategoryName" value="${CatalogLevel2}"/>
    <parameter name="Level3CategoryName" value="Jackets &amp; Coats"/>
  </module>
  <module name="library.function.FWaitForElement">
    <parameter name="element" value="css=a.name-link[title='Notch Collar Button Down Jacket']"/>
  </module>
  <action name="VERIFY-NoPromotion"/>
  <command name="assertXpathCount" target="//*[contains(text(),'${PromotionName}')]" value="0"/>
  <action name="CheckForPromotion"/>
  <module name="library.module.app.sitegenesis.OpenCatalogDisplayCategoryLevel3">
    <parameter name="Level1CategoryName" value="${CatalogLevel1}"/>
    <parameter name="Level2CategoryName" value="${CatalogLevel2}"/>
    <parameter name="Level3CategoryName" value="${CatalogLevel3}"/>
  </module>
  <module name="library.function.FWaitForElement">
    <parameter name="element" value="css=a.name-link[title='Drape Front Cardigan.']"/>
  </module>
  <action name="VERIFY-PromoCalloutMessages"/>
  <command name="pause" value="1000"/>
  <command name="assertXpathCount" target="//*[contains(text(),'${PromotionName}')]" value="11"/>
  <action name="Refine"/>
  <module name="library.module.app.sitegenesis.SelectPriceRefinement">
    <parameter name="PriceLabelText" value="$100 - $499.99"/>
  </module>
  <module name="library.module.app.sitegenesis.SelectRefinementColor">
    <parameter name="Color" value="Brown"/>
  </module>
  <action name="SelectProduct"/>
  <module name="library.module.app.sitegenesis.ClickProductQuickViewLink">
    <parameter name="ProductName" value="${ProductName}"/>
  </module>
  <module name="library.module.app.sitegenesis.SelectSize">
    <parameter name="Size" value="XS"/>
  </module>
  <command name="pause" value="1000"/>
  <action name="UseQuickViewToAddProductToCart"/>
  <module name="library.module.app.sitegenesis.AddToCart"/>
  <action name="VERIFY-PromoInShoppingCart"/>
  <module name="library.module.app.sitegenesis.OpenShoppingCart"/>
  <action name="VERIFY-PromoMessageNOTDisplayed"/>
  <command name="assertXpathCount" target="//*[contains(text(),'${PromotionName}')]" value="0"/>
  <action name="ChangeQuantity"/>
  <module name="library.function.FType">
    <parameter name="typeElement" value="//input[@name='dwfrm_cart_shipments_i0_items_i0_quantity']"/>
    <parameter name="inputString" value="3"/>
  </module>
  <module name="library.function.FClickAndWait">
    <parameter name="clickElement" value="css=button#update-cart"/>
  </module>
  <action name="VERIFY-PromoBonusProductDisplayed"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=div.promo.first"/>
    <parameter name="textPattern" value="- ${PromotionName}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=a[title='${BonusProductName}']"/>
    <parameter name="textPattern" value="${BonusProductName}"/>
  </module>
  <action name="CleanUp"/>
  <module name="library.module.app.busmgr.DisablePromotion">
    <parameter name="SiteName" value="${SiteName}"/>
    <parameter name="PromotionName" value="${PromotionName}"/>
  </module>
</testcase>