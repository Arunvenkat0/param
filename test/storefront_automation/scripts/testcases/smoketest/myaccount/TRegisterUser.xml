<?xml version="1.0" encoding="UTF-8"?>
<testcase xmlns="http://xlt.xceptance.com/xlt-script/2" version="4" junit-test="true">
  <tags>C84722</tags>
  <description>Test Case ID:(C84722) Smoke Test » My Account - Returning Customer » Login/Register » Create Account</description>
  <module name="modules.staticelements.Homepage"/>
  <module name="modules.usermanagement.RegisterNewUser">
    <parameter name="FirstName" value="${FirstName}"/>
    <parameter name="LastName" value="${LastName}"/>
  </module>
  <action name="Logout">
    <comment>Logout and check if user is directed to the login page.</comment>
  </action>
  <module name="modules.usermanagement.LogOutFromWelcomePage"/>
  <module name="modules.usermanagement.ValidateLoginPageStructure"/>
  <action name="AllowNewAccountToTakeEffect"/>
  <command name="pause" value="10000">
    <comment>Ensure new account is activated before continuing.</comment>
  </command>
  <action name="LoginRegisteredUser">
    <comment>Login again with the created account and check if the user is directed to the welcome page.</comment>
  </action>
  <module name="modules.usermanagement.LoginOnLoginPage">
    <parameter name="Email" value="${Email}"/>
    <parameter name="Password" value="${Password}"/>
  </module>
  <module name="modules.usermanagement.ValidateWelcomePage">
    <parameter name="FirstName" value="${FirstName}"/>
    <parameter name="LastName" value="${LastName}"/>
  </module>
  <action name="LogoutAgain">
    <comment>Logout again.</comment>
  </action>
  <module name="modules.usermanagement.LogOutFromWelcomePage"/>
  <module name="modules.usermanagement.ValidateLoginPageStructure"/>
  <action name="Return2Home">
    <comment>Go back to homepage.</comment>
  </action>
  <module name="modules.staticelements.Return2Home"/>
</testcase>