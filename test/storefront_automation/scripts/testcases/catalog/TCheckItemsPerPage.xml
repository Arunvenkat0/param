<?xml version="1.0" encoding="UTF-8"?>
<testcase version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Opens a category page and changes the number of items to be displayed. Validates the correctness of the result.</description>
  <action name="OpenStartPage"/>
  <command name="open" value="${shopURL}"/>
  <command name="deleteAllVisibleCookies"/>
  <command name="open" value="${shopURL}"/>
  <action name="OpenMainCategoryPage"/>
  <module name="modules.catalog.OpenMainCategoryPage">
    <comment>Navigate to Mens --&gt; Footwear catalog page</comment>
    <parameter name="MainCategoryNumber" value="${MainCategoryNumber}"/>
    <parameter name="MainCategoryName" value="${MainCategoryName}"/>
  </module>
  <action name="OpenSubCategoryPage"/>
  <module name="modules.catalog.OpenSubCategoryPage">
    <parameter name="SubCategoryName" value="${SubCategoryName}"/>
  </module>
  <action name="CheckItemsPerPageFeature"/>
  <module name="modules.catalog.CheckItemsPerPageFeature">
    <parameter name="ItemsPerPage" value="${ItemsPerPageOption1}"/>
    <parameter name="SortMethod" value="${DefaultCatalogSortMethod}"/>
    <parameter name="LastPageNumber" value="${ItemsPerPageOption1LastPageNumber}"/>
    <parameter name="FirstItem" value="${ItemsPerPageOption1FirstItem}"/>
    <parameter name="LastItem" value="${ItemsPerPageOption1LastItem}"/>
    <parameter name="MaxItems" value="${CatalogMaxItems}"/>
    <parameter name="ShownProductsFirstPage" value="1 - ${ItemsPerPageOption1}"/>
    <parameter name="ShownProductsLastPage" value="${ItemsPerPageOption1LastPageItemNumber} - ${CatalogMaxItems}"/>
  </module>
  <module name="modules.catalog.CheckItemsPerPageFeature">
    <parameter name="ItemsPerPage" value="${ItemsPerPageOption2}"/>
    <parameter name="SortMethod" value="${DefaultCatalogSortMethod}"/>
    <parameter name="LastPageNumber" value="${ItemsPerPageOption2LastPageNumber}"/>
    <parameter name="FirstItem" value="${ItemsPerPageOption2FirstItem}"/>
    <parameter name="LastItem" value="${ItemsPerPageOption2LastItem}"/>
    <parameter name="MaxItems" value="${CatalogMaxItems}"/>
    <parameter name="ShownProductsFirstPage" value="1 - ${ItemsPerPageOption2}"/>
    <parameter name="ShownProductsLastPage" value="${ItemsPerPageOption2LastPageItemNumber} - ${CatalogMaxItems}"/>
  </module>
  <module name="modules.catalog.CheckItemsPerPageFeatureViewAll">
    <parameter name="MaxItems" value="${CatalogMaxItems}"/>
    <parameter name="FirstItem" value="${ItemsPerPageOptionViewAllFirstItem}"/>
    <parameter name="LastItem" value="${ItemsPerPageOptionViewAllLastItem}"/>
  </module>
  <action name="BackToHome"/>
  <module name="modules.staticelements.Return2Home"/>
</testcase>