<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Verifies the InStore delivery address for a given product number in the shopping cart.</description>
  <parameter name="itemNumberInCartList"/>
  <parameter name="StreetAddress"/>
  <parameter name="City"/>
  <parameter name="State"/>
  <parameter name="Zip"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=form#cart-items-form table.item-list tbody tr:nth-child(@{itemNumberInCartList}) td.item-delivery-options .selected-store-address"/>
    <parameter name="textPattern" value="regexp:.*@{StreetAddress}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=form#cart-items-form table.item-list tbody tr:nth-child(@{itemNumberInCartList}) td.item-delivery-options .selected-store-address"/>
    <parameter name="textPattern" value="regexp:.*@{City}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=form#cart-items-form table.item-list tbody tr:nth-child(@{itemNumberInCartList}) td.item-delivery-options .selected-store-address"/>
    <parameter name="textPattern" value="regexp:.*@{State}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=form#cart-items-form table.item-list tbody tr:nth-child(@{itemNumberInCartList}) td.item-delivery-options .selected-store-address"/>
    <parameter name="textPattern" value="regexp:.*@{Zip}.*"/>
  </module>
</scriptmodule>