<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Veriffies the default address matches the given address data.</description>
  <parameter name="AddressTitle"/>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <parameter name="Street1"/>
  <parameter name="City"/>
  <parameter name="StateAbbrev"/>
  <parameter name="Zip"/>
  <parameter name="Country"/>
  <parameter name="Phone"/>
  <action name="VerifyDefaultAddressTitle"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt;h3"/>
    <parameter name="textPattern" value="Default Address "/>
  </module>
  <action name="VerifyAddressTitle"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-title"/>
    <parameter name="textPattern" value="@{AddressTitle}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-name"/>
    <parameter name="textPattern" value="@{FirstName} @{LastName}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-location"/>
    <parameter name="textPattern" value="regexp:.*@{Street1}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-location"/>
    <parameter name="textPattern" value="regexp:.*@{City}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-location"/>
    <parameter name="textPattern" value="regexp:.*@{StateAbbrev}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-location"/>
    <parameter name="textPattern" value="regexp:.*@{Zip}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-location"/>
    <parameter name="textPattern" value="regexp:.*@{Country}.*"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address-list &gt; li.default &gt; .mini-address-location"/>
    <parameter name="textPattern" value="regexp:.*@{Phone}.*"/>
  </module>
</scriptmodule>