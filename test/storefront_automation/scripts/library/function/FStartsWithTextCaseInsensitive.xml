<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>1. Translate 'plainString' into an escaped regex.  2. Calls FWaitForElement 'textElement'.  3. Waits for the case insensitive text version of 'plainString' at the beginning of  'textElement'.</description>
  <parameter name="textElement"/>
  <parameter name="plainString"/>
  <module name="library.function.FStringToRegexStore">
    <parameter name="plainString" value="@{plainString}"/>
    <parameter name="regexVarName" value="REGEX_VAR"/>
  </module>
  <module name="library.function.FWaitForElement">
    <parameter name="element" value="@{textElement}"/>
  </module>
  <command name="waitForText" target="@{textElement}" value="regexpi:${REGEX_VAR}.*"/>
</scriptmodule>