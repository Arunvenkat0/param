<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>1. Waits for the 'element' to exist. 2 Select the 'selection' within the 'element'.</description>
  <parameter name="element"/>
  <parameter name="selection"/>
  <command name="waitForElementPresent" target="@{element}"/>
  <command name="select" target="@{element}" value="@{selection}"/>
</scriptmodule>