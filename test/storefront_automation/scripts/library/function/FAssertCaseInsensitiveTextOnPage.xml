<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>1. Verifies existence of 'text' on the current page ignoring case.</description>
  <parameter name="text"/>
  <module name="library.function.FStringToRegexStore">
    <parameter name="plainString" value="@{text}"/>
    <parameter name="regexVarName" value="REGEX_VAR_NAME"/>
  </module>
  <command name="pause" value="500"/>
  <command name="waitForTextPresent" value="regexpi:${REGEX_VAR_NAME}"/>
</scriptmodule>