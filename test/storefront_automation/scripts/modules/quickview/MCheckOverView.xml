    <comment>Select size.</comment>
  </command>
  <command name="click" target="css=.value .emptyswatch .swatchanchor">
    <comment>Select size.</comment>
  </command>
  <command name="waitForElementPresent" target="//li[contains(text(),'${SizeSelected}') ]"/>
  <command name="assertNotElementPresent" target="css=#add-to-cart[disabled]">
    <comment>Check for the disabled add to cart button.</comment>
  </command>
  <command name="assertElementPresent" target="css=.product-actions .menu .wl-action">
    <comment>Check for the disabled add to cart button.</comment>
  </command>
  <command name="assertElementPresent" target="css=#add-to-cart">
    <comment>Check for the disabled add to cart button.</comment>
  </command>
