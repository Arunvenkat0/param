<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>checks the most important address fields where a input is required:
- FirstName
- LastName
- Address
- Country
- State
- City
- ZipCode</description>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//input[contains(@id, 'firstname') or contains(@id, 'firstName')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//input[contains(@id, 'firstname') or contains(@id, 'firstName')][contains(@class, 'required')]"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//input[contains(@id, 'lastname') or contains(@id, 'lastName')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//input[contains(@id, 'lastname') or contains(@id, 'lastName')][contains(@class, 'required')]"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//input[contains(@id, 'address1')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//input[contains(@id, 'address1')][contains(@class, 'required')]"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//select[contains(@id, 'country')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//select[contains(@id, 'country')][contains(@class, 'required')]"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//select[contains(@id, 'state')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//select[contains(@id, 'state')][contains(@class, 'required')]"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//input[contains(@id, 'city')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//input[contains(@id, 'city')][contains(@class, 'required')]"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=//input[contains(@id, 'zip')][contains(@class, 'required')]"/>
  </module>
  <command name="assertElementPresent" disabled="true" target="xpath=//input[contains(@id, 'zip')][contains(@class, 'required')]"/>
</scriptmodule>