<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Deletes the last address. Checks if the  given number of addresses are still available after deleting the last entry.</description>
  <parameter name="AddressCount"/>
  <action name="DeleteLastAddress"/>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.address-list .last .delete"/>
  </module>
  <command name="clickAndWait" disabled="true" target="css=.address-list .last .delete"/>
  <command name="waitForXpathCount" target="id('addresses')/ul[@class='address-list']/li" value="@{AddressCount}"/>
</scriptmodule>