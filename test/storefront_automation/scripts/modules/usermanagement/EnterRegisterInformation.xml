<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Enters FirstName, LastName, Email and Password.

To check the validity rules for email and password wrong data are entered in a first attempt.</description>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <parameter name="EmailWrong"/>
  <parameter name="EmailCorrect"/>
  <parameter name="PasswordTooShort"/>
  <parameter name="PasswordCorrect"/>
  <action name="EnterIncorrectData"/>
  <command name="type" target="id=dwfrm_profile_customer_firstname" value="@{FirstName}"/>
  <command name="type" target="id=dwfrm_profile_customer_lastname" value="@{LastName}"/>
  <command name="type" target="id=dwfrm_profile_customer_email" value="@{EmailWrong}"/>
  <command name="type" target="id=dwfrm_profile_customer_emailconfirm" value="@{EmailWrong}"/>
  <command name="type" target="id=dwfrm_profile_login_password" value="@{PasswordTooShort}"/>
  <command name="type" target="id=dwfrm_profile_login_passwordconfirm" value="@{PasswordTooShort}"/>
  <action name="AndCheckResult"/>
  <command name="clickAndWait" target="name=dwfrm_profile_confirm value=Apply"/>
  <command name="pause" value="500"/>
  <command name="assertText" target="id=dwfrm_profile_customer_firstname" value="@{FirstName}"/>
  <command name="assertText" target="id=dwfrm_profile_customer_lastname" value="@{LastName}"/>
  <command name="assertText" target="css=#dwfrm_profile_customer_email + span" value="The email address is invalid."/>
  <command name="assertText" target="css=#dwfrm_profile_customer_emailconfirm + span" value="The email address is invalid."/>
  <command name="assertText" target="css=#dwfrm_profile_login_password + span" value="8 - 255 characters"/>
  <command name="assertText" target="css=#dwfrm_profile_login_passwordconfirm + span" value="8 - 255 characters "/>
  <action name="EnterCorrectData">
    <comment>Password, Email</comment>
  </action>
  <command name="type" target="id=dwfrm_profile_customer_email" value="@{EmailCorrect}"/>
  <command name="type" target="id=dwfrm_profile_customer_emailconfirm" value="@{EmailCorrect}"/>
  <command name="type" target="id=dwfrm_profile_login_password" value="@{PasswordCorrect}"/>
  <command name="type" target="id=dwfrm_profile_login_passwordconfirm" value="@{PasswordCorrect}"/>
  <action name="AndCheckResult"/>
  <command name="clickAndWait" target="name=dwfrm_profile_confirm value=Apply"/>
</scriptmodule>