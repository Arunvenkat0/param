<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Logs a customer out using the logout-link on the welcome page. Checks if the customer name disappears within the page header.</description>
  <command name="clickAndWait" target="css=.menu-utility-user .last a"/>
  <command name="waitForElementPresent" target="css=.user-login"/>
  <command name="assertText" target="css=.user-login" value="regexpi:Login"/>
  <command name="assertText" target="css=.user-register" value="regexpi:Register"/>
</scriptmodule>