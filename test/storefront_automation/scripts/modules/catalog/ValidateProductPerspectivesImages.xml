<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Select and validate the presence of images for the selected product</description>
  <command name="waitForElementPresent" target="css=.product-thumbnails li:nth-child(1) img"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.product-thumbnails li:nth-child(2) img"/>
  </module>
  <command name="storeEval" target="document.getElementsByClassName('primary-image')[0].getAttribute('src')" value="ImageNumber1"/>
  <action name="SelectAlternativeProductImage"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="css=.product-thumbnails li:nth-child(2) img"/>
  </module>
  <command name="waitForNotElementPresent" target="css=.primary-image[src*=&quot;${ImageNumber1}&quot;]"/>
  <command name="storeEval" target="document.getElementsByClassName('primary-image')[0].getAttribute('src')" value="ImageNumber2"/>
  <action name="SelectAlternativeProductImage"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="css=.product-thumbnails li:nth-child(1) img"/>
  </module>
  <command name="waitForNotElementPresent" target="css=.primary-image[src*=&quot;${ImageNumber2}&quot;]"/>
</scriptmodule>
