<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Check the presence of navigation elements on last page.</description>
  <command name="waitForElementPresent" target="css=.page-first"/>
  <module name="library.function.FStoreText">
    <parameter name="textElement" value="css=.current-page"/>
    <parameter name="textStoreVariableName" value="LastPage"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.current-page"/>
    <parameter name="textPattern" value="${LastPage}"/>
  </module>
  <command name="assertNotElementPresent" target="css=.page-next"/>
  <command name="assertNotElementPresent" target="css=.page-last"/>
  <command name="assertElementPresent" target="css=.page-previous"/>
</scriptmodule>
