<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>This module validates the product detail page for correct name and price
of the displayed product.

@Parameters:
Name: Product name
Price: Single product price</description>
  <parameter name="Name"/>
  <parameter name="Price"/>
  <command name="waitForElementPresent" target="id=main">
    <comment>Validate Product Image</comment>
  </command>
  <module name="library.function.FAssertTextCaseInsensitive">
    <parameter name="textElement" value="css=h1.product-name"/>
    <parameter name="plainString" value="@{Name}"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=h1.product-name"/>
    <parameter name="text" value="@{Name}"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.breadcrumb .last"/>
    <parameter name="text" value="@{Name}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.price-sales"/>
    <parameter name="textPattern" value="@{Price}"/>
  </module>
</scriptmodule>