<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the quickview behaviour:
- window is opened when hovering over the product image on catalog pages
- product name and price is displayed correctly
- cart-button is disabled initially
- default color is selected
- size is selected
- cart button is enabled</description>
  <module name="library.function.FSelectAndVerifySelection">
    <parameter name="selectElement" value="css=#grid-sort-header"/>
    <parameter name="selectLabel" value="Product Name Z - A"/>
    <parameter name="labelValue" value="Product Name Z - A"/>
  </module>
  <command name="pause" value="4000"/>
  <module name="library.function.FStoreText">
    <parameter name="textElement" value="css=.grid-tile:first-child .name-link"/>
    <parameter name="textStoreVariableName" value="ProductName"/>
  </module>
  <module name="library.function.FStoreText">
    <parameter name="textElement" value="css=.grid-tile:first-child .product-sales-price"/>
    <parameter name="textStoreVariableName" value="ProductPrice"/>
  </module>
  <action name="OpenQuickview"/>
  <module name="modules.catalog.OpenQuickView"/>
  <module name="modules.catalog.ValidateProductInQuickView"/>
  <action name="SelectSize"/>
  <module name="modules.catalog.CheckQuickviewAndAddToCartButton"/>
  <action name="SwitchToDetails"/>
  <module name="modules.catalog.QuickViewSwitchToDetailsPage"/>
</scriptmodule>