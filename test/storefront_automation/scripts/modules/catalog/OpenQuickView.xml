<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Selects a product inside a catalog and opens it's quick view dialoge.</description>
  <command name="waitForElementPresent" target="xpath=//div[@class='product-name']//a[starts-with(@title,'${ProductName}')]">
    <comment>Validate Product Presence</comment>
  </command>
  <command name="mouseOver" target="xpath=//div[@class='product-image']/a[starts-with(@title,'${ProductName}')]"/>
  <command name="waitForElementPresent" target="xpath=id('quickviewbutton')[starts-with(@title,'${ProductName}')]"/>
  <action name="ClickQuickViewLink"/>
  <module name="library.function.FMouseOverAndClick">
    <parameter name="mouseOverElement" value="//a[@class='thumb-link']/img[contains(@title,'${ProductName}')]"/>
    <parameter name="clickElement" value="css=a#quickviewbutton"/>
  </module>
  <command name="waitForElementPresent" target="id=#QuickViewDialog"/>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.ui-dialog .product-name"/>
    <parameter name="text" value="${ProductName}"/>
  </module>
</scriptmodule>