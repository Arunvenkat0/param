<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <parameter name="Name"/>
  <parameter name="StandardPrice"/>
  <parameter name="ActualPrice"/>
  <module name="modules.catalog.ValidateProductDataOnDetailsPage">
    <parameter name="Name" value="@{Name}"/>
    <parameter name="Price" value="@{ActualPrice}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.price-standard"/>
    <parameter name="textPattern" value="@{StandardPrice}"/>
  </module>
  <command name="assertText" disabled="true" target="css=.price-standard" value="@{StandardPrice}">
    <comment>Checks for the correct displayed price.</comment>
  </command>
</scriptmodule>
