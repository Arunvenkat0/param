<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validate the selected product details inside quickview</description>
  <command name="waitForElementPresent" target="id=#QuickViewDialog"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.ui-dialog-title"/>
    <parameter name="textPattern" value="regexpi:Product Quickview"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.ui-dialog .product-name"/>
    <parameter name="text" value="${ProductName}"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.primary-image[title*=&quot;${ProductName}&quot;]"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.product-price"/>
    <parameter name="textPattern" value="${ProductPrice}"/>
  </module>
</scriptmodule>