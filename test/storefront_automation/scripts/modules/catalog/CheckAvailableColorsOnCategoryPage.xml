<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validate the presence of aviailable swatch colors for a product on the category page.

Steps:
Validate Colors avaiable
Mouse over each color and validate respective procut image</description>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.product-name a[title=&quot;${ProductName}&quot;]"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=a.name-link[title=&quot;${ProductName}&quot;]"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.swatch.selected img[title=&quot;${ProductName}, ${DefaultColor}&quot;]"/>
  </module>
  <command name="pause" value="500"/>
  <command name="mouseOver" target="css=.swatch img[title=&quot;${ProductName}, ${AvailableColor2}&quot;]"/>
  <command name="waitForElementPresent" target="css=.product-image img[title=&quot;${ProductName}, ${AvailableColor2}&quot;]"/>
  <command name="mouseOut" target="css=.swatch img[title=&quot;${ProductName}, ${AvailableColor2}&quot;]"/>
  <command name="waitForElementPresent" target="css=.product-image img[title=&quot;${ProductName}, ${DefaultColor}&quot;] "/>
</scriptmodule>