<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Check the presence of navigation elements on first page.</description>
  <command name="waitForElementPresent" target="css=.pagination .page-last"/>
  <module name="library.function.FStoreText">
    <parameter name="textElement" value="css=.current-page"/>
    <parameter name="textStoreVariableName" value="FirstPage"/>
  </module>
  <command name="storeText" disabled="true" target="css=.current-page" value="FirstPage"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.current-page"/>
    <parameter name="textPattern" value="${FirstPage}"/>
  </module>
  <command name="assertText" disabled="true" target="css=.current-page" value="${FirstPage}"/>
  <command name="assertElementPresent" target="css=.page-next"/>
  <command name="assertElementPresent" target="css=.page-last"/>
  <command name="assertNotElementPresent" target="css=page-previous"/>
  <command name="assertNotElementPresent" target="css=.page-first"/>
</scriptmodule>
