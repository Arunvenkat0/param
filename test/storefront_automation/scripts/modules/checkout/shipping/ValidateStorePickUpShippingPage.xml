<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.address legend"/>
    <parameter name="textPattern" value="regexpi:In Store Shipment Message*"/>
  </module>
  <command name="assertText" target="css=.instore-shipment-method" value="glob:Shipping Method : Store Pickup $0.00 (Store Pickup)"/>
  <command name="assertElementPresent" target="css=.instore-shipment-address"/>
  <command name="assertElementPresent" target="css=.instore-message-text"/>
  <command name="assertText" target="css=.char-count" value="You have 250 characters left out of 250"/>
  <command name="assertElementPresent" target="css=.instore-continue-button button[value='Continue &gt;']"/>
  <action name="EnterStorePickupMessage"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="css=.instore-message-text .input-textarea"/>
  </module>
  <module name="library.function.FType">
    <parameter name="typeElement" value="css=.instore-message-text .input-textarea"/>
    <parameter name="inputString" value="lorem ipsum my in store pickup message text"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.char-count"/>
    <parameter name="textPattern" value="You have 207 characters left out of 250"/>
  </module>
</scriptmodule>