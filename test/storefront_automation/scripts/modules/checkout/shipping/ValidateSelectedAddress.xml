<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Check that user who has saved addresses and  choose one from the dropdown, and this fills in the fields.</description>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <parameter name="Street"/>
  <parameter name="Country"/>
  <parameter name="State"/>
  <parameter name="City"/>
  <parameter name="ZipCode"/>
  <parameter name="Phone"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="xpath=//input[contains(@id, 'firstname') or contains(@id, 'firstName')]"/>
    <parameter name="textPattern" value="@{FirstName}"/>
  </module>
  <command name="assertText" target="xpath=//input[contains(@id, 'lastname') or contains(@id, 'lastName')]" value="@{LastName}"/>
  <command name="assertText" target="xpath=//input[contains(@id, 'address1')]" value="@{Street}"/>
  <command name="assertSelectedLabel" target="xpath=//select[contains(@id, 'country')]" value="@{Country}"/>
  <command name="assertSelectedLabel" target="xpath=//select[contains(@id, 'state')]" value="@{State}"/>
  <command name="assertText" target="xpath=//input[contains(@id, 'city')]" value="@{City}"/>
  <command name="assertText" target="xpath=//input[contains(@id, 'postal')]" value="@{ZipCode}"/>
  <command name="assertText" target="xpath=//input[contains(@id, 'phone')]" value="@{Phone}"/>
</scriptmodule>