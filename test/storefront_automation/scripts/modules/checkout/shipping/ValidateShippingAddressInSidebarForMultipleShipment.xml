<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks the address information that was added on the previous shipping page.</description>
  <parameter name="Name"/>
  <parameter name="Address"/>
  <parameter name="City"/>
  <parameter name="StateShort"/>
  <parameter name="ZipCode"/>
  <parameter name="Country"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/h3"/>
  </module>
  <command name="assertElementPresent" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[1][.='@{Name}']">
    <comment>Validate Address Name</comment>
  </command>
  <command name="assertElementPresent" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[2][.='@{Address}']">
    <comment>Validate Shipping Address</comment>
  </command>
  <command name="assertElementPresent" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[3][.='@{City}, @{StateShort} @{ZipCode}']">
    <comment>Validate City State and ZipCode</comment>
  </command>
  <command name="assertElementPresent" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[4][.='@{Country}']">
    <comment>Validate Shipping Country Name</comment>
  </command>
</scriptmodule>
