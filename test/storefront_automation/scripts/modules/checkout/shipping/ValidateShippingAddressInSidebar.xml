<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Checks the address information that was added on the previous shipping page.</description>
  <parameter name="Name"/>
  <parameter name="Address"/>
  <parameter name="City"/>
  <parameter name="StateShort"/>
  <parameter name="ZipCode"/>
  <parameter name="Country"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/h3"/>
    <parameter name="textPattern" value="regexpi:.*Shipping Address"/>
  </module>
  <command name="assertText" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[1]" value="@{Name}">
    <comment>Validate Address Name</comment>
  </command>
  <command name="assertText" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[2]" value="@{Address}">
    <comment>Validate Shipping Address</comment>
  </command>
  <command name="assertText" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[3]" value="@{City}, @{StateShort} @{ZipCode}">
    <comment>Validate City State and ZipCode</comment>
  </command>
  <command name="assertText" target="xpath=id('secondary')/div[contains(@class,'mini-shipment')]/div/div[4]" value="@{Country}">
    <comment>Validate Shipping Country Name</comment>
  </command>
</scriptmodule>