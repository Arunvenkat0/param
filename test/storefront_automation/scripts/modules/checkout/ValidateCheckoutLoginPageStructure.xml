<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the page structure of the login page.</description>
  <command name="pause" value="1500"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.breadcrumb-last"/>
    <parameter name="textPattern" value="My Account"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.secondary-navigation"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=#primary h1"/>
    <parameter name="textPattern" value="Checkout Login"/>
  </module>
  <command name="assertXpathCount" target="id('primary')//div[contains(@class, 'login-box')]" value="6">
    <comment>Validates the correct number of containers/boxes.</comment>
  </command>
</scriptmodule>