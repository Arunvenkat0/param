<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Checks the store information on summary page:
- store address
- ShippingMethod
- ShippingStatus</description>
  <parameter name="ShippingMethod"/>
  <parameter name="ShippingStatus"/>
  <command name="assertText" target="css=.order-shipment-table th:nth-child(4)" value="regexpi:In Store Pickup"/>
  <command name="assertText" target="css=.order-shipment-address" value="${storeAddress}*"/>
  <command name="assertText" target="css=.shipping-method .label" value="glob:Method:"/>
  <command name="assertText" target="css=.shipping-method .value" value="@{ShippingMethod}"/>
  <command name="assertText" target="css=.shipping-status .label" value="glob:Shipping Status:"/>
  <command name="assertText" target="css=.shipping-status .value" value="@{ShippingStatus}"/>
</scriptmodule>