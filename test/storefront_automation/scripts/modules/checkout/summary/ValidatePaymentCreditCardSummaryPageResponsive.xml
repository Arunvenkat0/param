<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Checks the credit card information on summary page for responsive design:
Type
Last4 = Number with hidden digits
Expire Month as Number
Expire Year</description>
  <parameter name="Type"/>
  <parameter name="Last4"/>
  <parameter name="ExpireMonthNumber"/>
  <parameter name="ExpireYear"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.order-payment-instruments"/>
    <parameter name="textPattern" value="*@{Type}*"/>
  </module>
  <command name="assertText" target="css=.order-payment-instruments" value="*@{Last4}*"/>
  <command name="assertText" target="css=.order-payment-instruments" value="*Exp.@{ExpireMonthNumber}.@{ExpireYear}*"/>
  <command name="assertText" target="css=.order-payment-instruments" value="glob:*Amount:*"/>
</scriptmodule>