<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Validates the product data on summary page.
Name
Quantity
Price</description>
  <parameter name="Position"/>
  <parameter name="Name"/>
  <parameter name="Quantity"/>
  <parameter name="Price"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.order-shipment-table tr:nth-child(@{Position}) .product-list-item .name"/>
    <parameter name="textPattern" value="@{Name}"/>
  </module>
  <command name="assertText" disabled="true" target="css=.order-shipment-table tr:nth-child(@{Position}) .product-list-item .name" value="@{Name}"/>
  <command name="assertText" target="css=.order-shipment-table tr:nth-child(@{Position}) td:nth-child(2)" value="@{Quantity}"/>
  <command name="assertText" target="css=.order-shipment-table tr:nth-child(@{Position}) td:nth-child(3)" value="@{Price}*"/>
</scriptmodule>
