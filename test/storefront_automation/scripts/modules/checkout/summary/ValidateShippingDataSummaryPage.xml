<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Checks the shipping information on summary page:
- Name
- Address
- City / State / ZIP
- Country
- ShippingMethod
- ShippingStatus</description>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <parameter name="Address"/>
  <parameter name="City"/>
  <parameter name="StateShort"/>
  <parameter name="ZipCode"/>
  <parameter name="Country"/>
  <parameter name="ShippingMethod"/>
  <parameter name="ShippingStatus"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.order-shipment-table th:nth-child(4)"/>
    <parameter name="textPattern" value="regexpi:Shipping To"/>
  </module>
  <command name="assertText" target="css=.order-shipment-address .firstname" value="@{FirstName}"/>
  <command name="assertText" target="css=.order-shipment-address .lastname" value="@{LastName}"/>
  <command name="assertText" target="css=.order-shipment-address .street" value="@{Address}"/>
  <command name="assertText" target="css=.order-shipment-address .city" value="@{City},"/>
  <command name="assertText" target="css=.order-shipment-address .state" value="@{StateShort}*"/>
  <command name="assertText" target="css=.order-shipment-address .zip" value="@{ZipCode}"/>
  <command name="assertText" target="css=.order-shipment-address .country" value="@{Country}"/>
  <command name="assertText" target="css=.shipping-method .label" value="glob:Method:"/>
  <command name="assertText" target="css=.shipping-method .value" value="@{ShippingMethod}"/>
  <command name="assertText" target="css=.shipping-status .label" value="glob:Shipping Status:"/>
  <command name="assertText" target="css=.shipping-status .value" value="@{ShippingStatus}"/>
</scriptmodule>