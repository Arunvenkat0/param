<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Test with foreign addresses as well: the zip code field is the biggest problem here. Make sure it is not restricted to accepting US zip codes. Common problems are Canada/UK (letters, numbers, space) and Australia (only four digits). US zip code should be accepted as 12345 or 12345-6789.</description>
  <action name="NegativeZipCodes"/>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'postal')]"/>
    <parameter name="inputString" value="-0001"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.error-message"/>
    <parameter name="textPattern" value="Please enter a valid value"/>
  </module>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'zip')]"/>
    <parameter name="inputString" value="1234-"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.error-message"/>
    <parameter name="textPattern" value="Please enter a valid value"/>
  </module>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'zip')]"/>
    <parameter name="inputString" value="1234"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.error-message"/>
    <parameter name="textPattern" value="Please enter a valid value"/>
  </module>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'zip')]"/>
    <parameter name="inputString" value="9404e"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.error-message"/>
    <parameter name="textPattern" value="Please enter a valid value"/>
  </module>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'zip')]"/>
    <parameter name="inputString" value="9404@"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.error-message"/>
    <parameter name="textPattern" value="Please enter a valid value"/>
  </module>
  <action name="ValidateCanadaZipCode"/>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'zip')]"/>
    <parameter name="inputString" value="B4V 2K4"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <command name="assertNotElementPresent" target="xpath=//input[contains(@id, 'zip')]"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.mini-billing-address .details"/>
    <parameter name="textPattern" value="glob:*B4V 2K4*"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.mini-billing-address .section-header-note"/>
  </module>
  <action name="ValidateUSZipCode"/>
  <module name="library.function.FTypeAndVerifyInput">
    <parameter name="typeElement" value="xpath=//input[contains(@id, 'zip')]"/>
    <parameter name="inputString" value="12345-6789"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.button-fancy-large"/>
  </module>
  <command name="assertNotElementPresent" target="xpath=//input[contains(@id, 'zip')]"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.mini-billing-address .details"/>
    <parameter name="textPattern" value="glob:*12345-6789*"/>
  </module>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.mini-billing-address .section-header-note"/>
  </module>
</scriptmodule>