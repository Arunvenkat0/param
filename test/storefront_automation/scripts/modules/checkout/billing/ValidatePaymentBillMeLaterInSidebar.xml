<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks the Bill Me Later data within the sidebar.</description>
  <command name="assertText" target="css=.mini-payment-instrument span" value="regexpi:.*Payment Method"/>
  <command name="assertText" target="css=.mini-payment-instrument .details" value="glob:*Bill Me Later*">
    <comment>Validate Pay Pal Type</comment>
  </command>
  <command name="assertText" target="css=.mini-payment-instrument .details" value="regexp:.*Amount:\s*-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$">
    <comment>Validate Amount</comment>
  </command>
</scriptmodule>
