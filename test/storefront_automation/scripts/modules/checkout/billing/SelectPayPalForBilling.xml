<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Choosing the PayPal payment method hides the CC field or whatever other payment method field was displayed and shows PayPal information instead.</description>
  <module name="library.function.FCheck">
    <parameter name="checkElement" value="id=is-PayPal"/>
  </module>
  <command name="assertNotVisible" target="id=dwfrm_billing_paymentMethods_creditCard_owner"/>
  <command name="assertNotVisible" target="id=dwfrm_billing_paymentMethods_creditCard_type"/>
  <command name="assertNotVisible" target="id=dwfrm_billing_paymentMethods_creditCard_number"/>
  <command name="assertNotVisible" target="id=dwfrm_billing_paymentMethods_creditCard_month"/>
  <command name="assertNotVisible" target="id=dwfrm_billing_paymentMethods_creditCard_year"/>
  <command name="assertNotVisible" target="id=dwfrm_billing_paymentMethods_creditCard_cvn"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="id=PaymentMethod_Custom"/>
  </module>
</scriptmodule>