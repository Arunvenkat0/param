<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Enters the required credit card information.</description>
  <parameter name="CardName"/>
  <parameter name="Type"/>
  <parameter name="Number"/>
  <parameter name="ExpireMonth"/>
  <parameter name="ExpireYear"/>
  <parameter name="SecurityCode"/>
  <command name="check" target="id=is-CREDIT_CARD">
    <comment>Select CC as Pament Method</comment>
  </command>
  <command name="waitForElementPresent" target="id=dwfrm_billing_paymentMethods_creditCard_owner"/>
  <command name="type" target="id=dwfrm_billing_paymentMethods_creditCard_owner" value="@{CardName}"/>
  <command name="select" target="id=dwfrm_billing_paymentMethods_creditCard_type" value="label=@{Type}"/>
  <command name="type" target="id=dwfrm_billing_paymentMethods_creditCard_number" value="@{Number}"/>
  <command name="select" target="id=dwfrm_billing_paymentMethods_creditCard_month" value="label=@{ExpireMonth}"/>
  <command name="select" target="id=dwfrm_billing_paymentMethods_creditCard_year" value="label=@{ExpireYear}"/>
  <command name="type" target="id=dwfrm_billing_paymentMethods_creditCard_cvn" value="@{SecurityCode}"/>
</scriptmodule>