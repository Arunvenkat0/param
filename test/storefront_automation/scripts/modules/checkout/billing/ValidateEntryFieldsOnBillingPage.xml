<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>On the page 'Shipping' is a checkbox 'Use as Billing Address'.
This module validates the entered paramameters:
- FirstName
- LastName
- Address
- Country
- State
- City
- ZipCode</description>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <parameter name="Address"/>
  <parameter name="Country"/>
  <parameter name="State"/>
  <parameter name="City"/>
  <parameter name="ZipCode"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="xpath=id('dwfrm_billing_billingAddress_addressFields_firstName')[@value='@{FirstName}']"/>
  </module>
  <command name="assertElementPresent" target="xpath=id('dwfrm_billing_billingAddress_addressFields_lastName')[@value='@{LastName}']"/>
  <command name="assertElementPresent" target="xpath=id('dwfrm_billing_billingAddress_addressFields_address1')[@value='@{Address}']"/>
  <command name="assertElementPresent" target="xpath=id('dwfrm_billing_billingAddress_addressFields_country')/option[@selected='selected'][@label='@{Country}']"/>
  <command name="assertElementPresent" target="xpath=id('dwfrm_billing_billingAddress_addressFields_states_state')/option[@selected='selected'][@label='@{State}']">
    <comment>workaround: can't check selected field</comment>
  </command>
  <command name="assertElementPresent" target="xpath=id('dwfrm_billing_billingAddress_addressFields_city')[@value='@{City}']"/>
  <command name="assertElementPresent" target="xpath=id('dwfrm_billing_billingAddress_addressFields_postal')[@value='@{ZipCode}']"/>
</scriptmodule>