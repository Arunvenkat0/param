<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the correct state of the checkout progress bar.</description>
  <parameter name="StepNumber"/>
  <parameter name="StepText"/>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.step-@{StepNumber}.active"/>
  </module>
  <command name="assertText" target="css=.step-@{StepNumber}" value="*@{StepText}">
    <comment>Validate the correct step text.</comment>
  </command>
</scriptmodule>