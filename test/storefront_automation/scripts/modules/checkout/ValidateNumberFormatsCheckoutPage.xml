<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks the price formats on summary page for the following data:
Subtotal
ShippingPrice 
SalesTax 
OrderTotal</description>
  <command name="waitForText" target="css=.order-subtotal td:nth-child(2)" value="regexp:^-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$">
    <comment>Validate Order's Subtotal</comment>
  </command>
  <command name="assertText" target="css=.order-sales-tax td:first-child" value="glob:Sales Tax"/>
  <command name="waitForText" target="css=.order-sales-tax td:nth-child(2)" value="regexp:^\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$">
    <comment>Validate Order's Sale tax Charges. Uses regular expression to check if it's a price =&gt; $ 12,234.28</comment>
  </command>
  <command name="assertText" target="css=.order-total td:first-child" value="glob:* Total:"/>
  <command name="assertText" target="css=.order-total' td:nth-child(2)" value="regexp:^-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$">
    <comment>Validate Order's Grand Total</comment>
  </command>
</scriptmodule>