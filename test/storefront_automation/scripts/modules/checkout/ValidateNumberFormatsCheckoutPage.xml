<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Checks the price formats on summary page for the following data:
Subtotal
ShippingPrice 
SalesTax 
OrderTotal</description>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.order-subtotal td:nth-child(2)"/>
    <parameter name="text" value="regexp:^-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.order-sales-tax td:first-child"/>
    <parameter name="text" value="glob:Sales Tax"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.order-sales-tax td:nth-child(2)"/>
    <parameter name="text" value="regexp:^\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.order-total td:first-child"/>
    <parameter name="text" value="glob:* Total:"/>
  </module>
  <module name="library.function.FWaitForText">
    <parameter name="textElement" value="css=.order-total td:nth-child(2)"/>
    <parameter name="text" value="regexp:^-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$"/>
  </module>
</scriptmodule>