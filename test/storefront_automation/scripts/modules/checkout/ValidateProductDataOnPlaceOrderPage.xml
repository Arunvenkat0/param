<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks the most important data of a product in the specified row:
Position -> row of the product
Name
Quantity
Price</description>
  <parameter name="Position"/>
  <parameter name="Name"/>
  <parameter name="Quantity"/>
  <parameter name="PriceTotal"/>
  <command name="assertText" target="css=.checkout-mini-cart .mini-cart-product:nth-child(@{Position}) .mini-cart-name" value="@{Name}">
    <comment>Validate Product Name</comment>
  </command>
  <command name="assertText" target="css=.checkout-mini-cart .mini-cart-product:nth-child(@{Position}) .mini-cart-pricing" value="glob:Qty: @{Quantity} @{PriceTotal}">
    <comment>Verify details such as quantity and price</comment>
  </command>
</scriptmodule>
