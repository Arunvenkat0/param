<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the page structure of a public wishlist page.</description>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.breadcrumb-last"/>
    <parameter name="textPattern" value="Wish List"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="xpath=id('primary')/h1[1]"/>
    <parameter name="textPattern" value="glob:Find Someone's Wish List:"/>
  </module>
  <command name="assertElementPresent" target="id=dwfrm_wishlist_search"/>
  <command name="assertElementPresent" target="id=dwfrm_wishlist_search_lastname"/>
  <command name="assertElementPresent" target="id=dwfrm_wishlist_search_firstname"/>
  <command name="assertElementPresent" target="id=dwfrm_wishlist_search_email"/>
  <command name="assertText" target="css=.list-table-header h2" value="@{FirstName} @{LastName} 's Wish List"/>
</scriptmodule>