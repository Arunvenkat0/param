<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates product data on a wishlist for a certain table row.</description>
  <parameter name="TableRow"/>
  <parameter name="ProductName"/>
  <parameter name="ProductID"/>
  <parameter name="ProductPrice"/>
  <command name="assertText" target="css=.item-list tr:nth-child(@{TableRow}) .item-details .name a" value="@{ProductName}"/>
  <command name="assertText" target="css=.item-list tr:nth-child(@{TableRow}) .item-details .sku .value" value="@{ProductID}"/>
  <command name="assertText" target="css=.item-list tr:nth-child(@{TableRow}) .item-details .price-sales" value="@{ProductPrice}"/>
  <command name="assertElementPresent" target="css=.item-list tr:nth-child(2) .item-dashboard input[name='Quantity']"/>
  <command name="assertElementPresent" target="css=.item-list tr:nth-child(2) .item-dashboard button[value='Add to Cart']"/>
</scriptmodule>