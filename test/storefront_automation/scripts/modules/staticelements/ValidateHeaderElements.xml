<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Checks the presence of all header elements.</description>
  <command name="assertElementPresent" target="xpath=id('header')/header/h1/a/img">
    <comment>Checks the presence of the shop logo</comment>
  </command>
  <module name="library.function.FWaitForElement">
    <parameter name="element" value="css=.primary-logo&gt;a&gt;img[alt=&quot;Demandware SiteGenesis&quot;]"/>
  </module>
  <command name="assertText" disabled="true" target="xpath=id('header')/header/h1/a/span" value="${shopName}"/>
  <command name="assertElementPresent" target="id=mini-cart"/>
  <command name="assertElementPresent" target="css=.menu-utility-user"/>
  <command name="assertText" target="css=.user-login" value="regexpi:Login"/>
  <command name="assertText" target="css=.user-register" value="regexpi:Register"/>
  <command name="assertText" target="css=.mini-cart-label" value="regexpi:Cart"/>
  <command name="assertElementPresent" target="css=.mini-cart-empty"/>
  <command name="assertText" target="css=.menu-utility li:nth-child(1)" value="regexpi:Wish List"/>
  <command name="assertText" target="css=.menu-utility li:nth-child(2)" value="regexpi:Gift Registry"/>
  <command name="assertText" target="css=.menu-utility li:nth-child(3)" value="regexpi:Store Locator"/>
  <command name="assertText" target="css=.menu-utility li:nth-child(4)" value="regexpi:Help"/>
</scriptmodule>