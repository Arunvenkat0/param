<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the contact us form and fills it with no data, invalid data and valid data to send it.</description>
  <command name="assertElementPresent" target="id=dwfrm_contactus_firstname"/>
  <command name="assertElementPresent" target="id=dwfrm_contactus_lastname"/>
  <command name="assertElementPresent" target="id=dwfrm_contactus_email"/>
  <command name="assertElementPresent" target="id=dwfrm_contactus_phone"/>
  <command name="assertElementPresent" target="id=dwfrm_contactus_ordernumber"/>
  <command name="assertElementPresent" target="id=dwfrm_contactus_myquestion"/>
  <command name="assertElementPresent" target="id=dwfrm_contactus_comment"/>
  <command name="assertElementPresent" target="id=sendBtn"/>
  <action name="SendEmptyFormAndCheckResults"/>
  <command name="click" target="id=sendBtn"/>
  <command name="assertElementPresent" target="css=#dwfrm_contactus_firstname +span"/>
  <command name="assertElementPresent" target="css=#dwfrm_contactus_lastname +span"/>
  <command name="assertElementPresent" target="css=#dwfrm_contactus_email +span"/>
  <command name="store" target="${RANDOM.String(8)}@varmail.de" value="Email">
    <comment>Generates a random email address.</comment>
  </command>
  <action name="EnterIncorrectData"/>
  <command name="type" target="id=dwfrm_contactus_firstname" value="${FirstName}"/>
  <command name="type" target="id=dwfrm_contactus_lastname" value="${LastName}"/>
  <command name="type" target="id=dwfrm_contactus_email" value="${EmailWrong}"/>
  <action name="AndCheckResult"/>
  <command name="clickAndWait" target="id=sendBtn"/>
  <command name="assertText" target="id=dwfrm_contactus_firstname" value="${FirstName}"/>
  <command name="assertText" target="id=dwfrm_contactus_lastname" value="${LastName}"/>
  <command name="assertText" target="css=#dwfrm_contactus_email + span" value="The email address is invalid."/>
  <action name="EnterCorrectData">
    <comment>Password, Email</comment>
  </action>
  <command name="type" target="id=dwfrm_contactus_email" value="${Email}"/>
  <command name="type" target="id=dwfrm_contactus_phone" value="123"/>
  <command name="type" target="id=dwfrm_contactus_ordernumber" value="123"/>
  <command name="select" target="id=dwfrm_contactus_myquestion" value="label=Order Status"/>
  <command name="type" target="id=dwfrm_contactus_comment" value="lorem ipsum "/>
  <action name="AndSendContactUsForm"/>
  <command name="clickAndWait" target="id=sendBtn"/>
  <command name="assertText" target="//*[@class='confirmation-message']//p[1]" value="Your message has been sent."/>
  <command name="assertText" target="//*[@class='confirmation-message']//p[2]" value="We will contact you shortly if your message requires a response."/>
</scriptmodule>