<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the credit card information at a given position.</description>
  <parameter name="Position"/>
  <parameter name="Name"/>
  <parameter name="TypeShort"/>
  <parameter name="NumberLastFour"/>
  <parameter name="ExpireDateMonthNumber"/>
  <parameter name="ExpireDateYear"/>
  <command name="waitForText" target="css=.payment-list li:nth-child(@{Position})" value="glob:*@{Name}*@{TypeShort}*@{NumberLastFour}*Exp.@{ExpireDateMonthNumber}.@{ExpireDateYear}*"/>
</scriptmodule>