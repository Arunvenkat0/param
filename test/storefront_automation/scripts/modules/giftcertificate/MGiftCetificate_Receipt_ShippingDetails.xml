<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>checks all important informtion for shipping:
- Name
- ShippingMethod
- email (last 6 letters)</description>
  <parameter name="FriendsName"/>
  <parameter name="ShippingMethod"/>
  <parameter name="EmailSaved"/>
  <command name="assertText" target="xpath=//table[@class='ordershipmenttable']//th[3]" value="Shipping Details"/>
  <command name="assertText" target="xpath=//div[@class='ordershipmentaddress']//div[@class='ordergiftcertto']/div[1]" value="@{FriendsName}"/>
  <command name="assertText" target="xpath=//div[@class='ordershipmentaddress']//div[@class='ordergiftcertto']/div[2]" value="*@{EmailSaved}*">
    <comment>chack last 6 symbols of the email</comment>
  </command>
  <command name="assertText" target="xpath=//div[@class='shippingmethod']/span[@class='label']" value="glob:Method:"/>
  <command name="assertText" target="xpath=//div[@class='shippingmethod']/span[2]" value="@{ShippingMethod}"/>
</scriptmodule>