<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>This module checks if the amount lies into its boundaries.
$5 &lt;= x &lt;= $5000</description>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_amount"/>
    <parameter name="inputString" value="5001"/>
  </module>
  <action name="Try2Add2Basekt"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="id=AddToBasketButton"/>
  </module>
  <command name="waitForText" target="css=#dwfrm_giftcert_purchase_amount + span" value="Gift Certificate can only be purchased with a minimum of 5 and maximum of 5000">
    <comment>Currency character removed to not conflict with multi-currency settings.</comment>
  </command>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_amount"/>
    <parameter name="inputString" value="4"/>
  </module>
  <action name="Try2Add2Basket"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="id=AddToBasketButton"/>
  </module>
  <command name="click" target="id=AddToBasketButton"/>
</scriptmodule>