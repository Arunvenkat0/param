<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>This module checks if the confirm email must equal the email.</description>
  <parameter name="Email"/>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_confirmRecipientEmail"/>
    <parameter name="inputString" value="nomatch@demandware.com"/>
  </module>
  <command name="type" disabled="true" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="nomatch@demandware.com"/>
  <action name="Try2Add2Basket"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="id=AddToBasketButton"/>
  </module>
  <command name="click" disabled="true" target="id=AddToBasketButton"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="id=AddToBasketButton"/>
  </module>
  <command name="click" disabled="true" target="id=AddToBasketButton">
    <comment>This second add2cart is for Chrome. Does not see the first click for no reason.</comment>
  </command>
  <command name="waitForText" target="css=#dwfrm_giftcert_purchase_confirmRecipientEmail + span" value="The email address doesn't match your friend's email."/>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_confirmRecipientEmail"/>
    <parameter name="inputString" value="@{Email}"/>
  </module>
  <command name="type" disabled="true" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="@{Email}"/>
</scriptmodule>
