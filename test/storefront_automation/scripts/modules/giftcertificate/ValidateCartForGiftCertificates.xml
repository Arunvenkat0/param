<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>This modul checks all details displayed in the cart.</description>
  <parameter name="Donor"/>
  <parameter name="FriendsName"/>
  <parameter name="FriendsEmail"/>
  <parameter name="Amount"/>
  <command name="waitForText" target="css=.name" value="Gift Certificate"/>
  <command name="waitForText" target="css=.gift-cert-delivery" value="- Gift certificate will be delivered by e-mail"/>
  <command name="waitForText" target="css=.giftcertamount .value" value="$$@{Amount}.00"/>
  <command name="waitForText" target="xpath=id('cart-table')//div[@class='attribute'][1]/span[@class='value']" value="@{FriendsName}, @{FriendsEmail}"/>
  <command name="waitForText" target="xpath=id('cart-table')//div[@class='attribute'][2]/span[@class='value']" value="Heinz"/>
  <command name="waitForText" target="css=.item-quantity" value="1"/>
  <command name="waitForText" target="css=.item-total" value="$$@{Amount}.00"/>
  <command name="waitForText" target="css=.order-subtotal td:nth-child(2)" value="$$@{Amount}.00"/>
  <command name="waitForText" target="css=.order-total td:nth-child(2)" value="$$@{Amount}.00"/>
</scriptmodule>