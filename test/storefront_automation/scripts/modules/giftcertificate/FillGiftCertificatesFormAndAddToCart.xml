<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>This module fills the gift certificates form with valid values.</description>
  <parameter name="Donor"/>
  <parameter name="FriendsName"/>
  <parameter name="Email"/>
  <parameter name="Message"/>
  <parameter name="Amount"/>
  <action name="EnterFieldsAndAddToCart"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_from" value="@{Donor}"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_recipient" value="@{FriendsName}"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_recipientEmail" value="@{Email}"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="@{Email}"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_message" value="@{Message}"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_amount" value="@{Amount}"/>
  <command name="click" target="id=AddToBasketButton"/>
</scriptmodule>