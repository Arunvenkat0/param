<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>This module checks the special format of gift certificates in section Place Order</description>
  <parameter name="Donor"/>
  <parameter name="FriendsName"/>
  <parameter name="Amount"/>
  <command name="waitForText" target="css=.gift-certificate-to .value" value="@{FriendsName} (${FriendsEmail})"/>
  <command name="waitForText" target="css=.gift-certificate-from .value" value="@{Donor}"/>
  <command name="waitForText" target="css=.item-quantity" value="1"/>
  <command name="waitForText" target="css=.item-total" value="$$@{Amount}.00"/>
</scriptmodule>