<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks if valid email addresses are required.</description>
  <parameter name="Email"/>
  <action name="EnterFirstInvalidMail"/>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_recipientEmail"/>
    <parameter name="inputString" value="abcde"/>
  </module>
  <command name="type" disabled="true" target="id=dwfrm_giftcert_purchase_recipientEmail" value="abcde"/>
  <action name="Try2Add2Basket"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="id=AddToBasketButton"/>
  </module>
  <command name="click" disabled="true" target="id=AddToBasketButton"/>
  <command name="waitForText" target="css=#dwfrm_giftcert_purchase_recipientEmail + span" value="The email address is invalid."/>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_recipientEmail"/>
    <parameter name="inputString" value="@{Email}"/>
  </module>
  <command name="type" disabled="true" target="id=dwfrm_giftcert_purchase_recipientEmail" value="@{Email}"/>
  <action name="EnterConfirmationInvalidMail"/>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=dwfrm_giftcert_purchase_confirmRecipientEmail"/>
    <parameter name="inputString" value="abcde"/>
  </module>
  <command name="type" disabled="true" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="abcde"/>
  <action name="Try2Add2Basket"/>
  <module name="library.function.FClick">
    <parameter name="clickElement" value="id=AddToBasketButton"/>
  </module>
  <command name="click" disabled="true" target="id=AddToBasketButton"/>
  <command name="waitForText" target="css=#dwfrm_giftcert_purchase_confirmRecipientEmail + span" value="The email address is invalid."/>
  <command name="type" disabled="true" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="@{Email}"/>
</scriptmodule>
