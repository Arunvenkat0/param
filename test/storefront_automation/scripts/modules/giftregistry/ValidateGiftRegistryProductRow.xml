<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the content of a product row for a gift registry.
Parameter:
ProductCount - number of products on the gift registry list
ProductRow - number of the product row to validate
ProductName - name of the product to validate 
ProductID - ID of the product to validate
ProductPrice - price of the product to validate
QuanitityPurchased - number of products purchased from this gift registry</description>
  <parameter name="ProductCount"/>
  <parameter name="ProductRow"/>
  <parameter name="ProductName"/>
  <parameter name="ProductID"/>
  <parameter name="ProductPrice"/>
  <parameter name="QuantityPurchased"/>
  <command name="assertXpathCount" target="id('primary')/table[@class='item-list']/tbody/tr" value="@{ProductCount}">
    <comment>Validate the number of products</comment>
  </command>
  <command name="assertText" target="css=.item-list tr:nth-child(@{ProductRow}) .product-list-item .name" value="@{ProductName}"/>
  <command name="assertText" target="css=.item-list tr:nth-child(@{ProductRow}) .product-list-item .sku .value" value="@{ProductID}"/>
  <command name="assertText" target="css=.item-list tr:nth-child(@{ProductRow}) .product-list-item .price-sales" value="@{ProductPrice}"/>
  <command name="assertText" target="css=.item-list tr:nth-child(@{ProductRow}) .option-quantity-purchased .value" value="@{QuantityPurchased}"/>
</scriptmodule>