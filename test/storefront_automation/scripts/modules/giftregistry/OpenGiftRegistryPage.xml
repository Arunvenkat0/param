<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Opens the gift registry page and validates the result.
Parameters:
LinkText - link to click on to get to gift registry page
Headline - main page headline of the gift registry page</description>
  <parameter name="LinkText"/>
  <parameter name="Headline"/>
  <command name="pause" value="500"/>
  <module name="library.function.FClickAndWait">
    <parameter name="clickElement" value="link=regexpi:@{LinkText}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.breadcrumb-last"/>
    <parameter name="textPattern" value="regexpi:Gift Registry"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=#primary h1"/>
    <parameter name="textPattern" value="@{Headline}"/>
  </module>
  <command name="assertElementPresent" target="id=dwfrm_productlists_search_registrantLastName"/>
  <command name="assertElementPresent" target="id=dwfrm_productlists_search_registrantFirstName"/>
  <command name="assertElementPresent" target="id=dwfrm_productlists_search_eventType"/>
  <command name="assertElementPresent" target="id=dwfrm_productlists_search"/>
  <command name="assertElementPresent" target="name=dwfrm_productlists_search_search value=Find"/>
</scriptmodule>