<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates the page structure of the gift registry details page when the user is logged in.
Parameter:
EventName - event name entered when creating the gift registry
EventDate - event date entered when creating the gift registry</description>
  <parameter name="EventName"/>
  <parameter name="EventDate"/>
  <command name="assertText" target="css=.breadcrumb-last" value="Gift Registry"/>
  <command name="assertText" target="css=#primary h1" value="Gift Registry"/>
  <command name="assertElementPresent" target="css=button[name=dwfrm_giftregistry_navigation_navRegistry].selected"/>
  <command name="assertElementPresent" target="name=dwfrm_giftregistry_navigation_navEvent"/>
  <command name="assertElementPresent" target="name=dwfrm_giftregistry_navigation_navShipping"/>
  <command name="assertElementPresent" target="name=dwfrm_giftregistry_navigation_navPurchases"/>
  <command name="assertElementPresent" target="name=dwfrm_giftregistry_setPublic"/>
  <command name="assertText" target="css=#dwfrm_giftregistry_items fieldset:first-child h2" value="@{EventName} - @{EventDate}"/>
</scriptmodule>