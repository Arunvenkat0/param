<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Validate Order's Total Amounts including Shipping and Sales tax Values. They are only checked for the correct format:

$XX,XXX.XX</description>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.order-subtotal td:nth-child(2)"/>
    <parameter name="textPattern" value="regexp:^-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$"/>
  </module>
  <command name="assertText" disabled="true" target="css=.order-subtotal td:nth-child(2)" value="regexp:^-?\$\s*([0-9]|(([1-9][0-9]{0,2})(,[0-9]{3})*))\.[0-9]{2}$">
    <comment>Validate Order's Sub Total</comment>
  </command>
</scriptmodule>
