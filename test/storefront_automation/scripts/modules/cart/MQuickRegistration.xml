<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <command name="store" target="${RANDOM.String(8)}@varmail.de" value="Email">
    <comment>Generates a random email address.</comment>
  </command>
  <command name="store" target="${RANDOM.String(9)}" value="Password">
    <comment>Generates a random password.</comment>
  </command>
  <command name="type" target="id=dwfrm_profile_customer_firstname" value="@{FirstName}"/>
  <command name="type" target="id=dwfrm_profile_customer_lastname" value="@{LastName}"/>
  <command name="type" target="id=dwfrm_profile_customer_email" value="${Email}"/>
  <command name="type" target="id=dwfrm_profile_customer_emailconfirm" value="${Email}"/>
  <command name="type" target="id=dwfrm_profile_login_password" value="${Password}"/>
  <command name="type" target="id=dwfrm_profile_login_passwordconfirm" value="${Password}"/>
  <command name="clickAndWait" target="name=dwfrm_profile_confirm value=Apply"/>
</scriptmodule>
