<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Simulates the user hovering over the cart link. Opens the cart page by clicking on the 'View Cart' button on the minicart overlay.

Precondition:
At least one product has been added to the cart.</description>
  <action name="OpenMiniCartWindow"/>
  <command name="mouseOver" target="css=.mini-cart-link">
    <comment>Hover over the mini cart link.</comment>
  </command>
  <command name="waitForVisible" target="css=.mini-cart-content">
    <comment>Wait for mini cart Window to appear.</comment>
  </command>
  <command name="mouseOver" target="css=.mini-cart-content">
    <comment>Hover over the mini cart window.</comment>
  </command>
  <action name="GoToCart"/>
  <command name="waitForVisible" target="css=.mini-cart-link-cart">
    <comment>Click onto the cart button.</comment>
  </command>
  <command name="clickAndWait" target="css=.mini-cart-link-cart">
    <comment>Click onto the cart button.</comment>
  </command>
  <module name="library.function.FAssertTextCaseInsensitive">
    <parameter name="textElement" value="css=.breadcrumb-last"/>
    <parameter name="plainString" value="Cart"/>
  </module>
  <command name="assertText" disabled="true" target="css=.breadcrumb-last" value="Cart"/>
  <module name="library.function.FAssertTextCaseInsensitive">
    <parameter name="textElement" value="css=#primary h1"/>
    <parameter name="plainString" value="Your Shopping Cart"/>
  </module>
  <command name="assertText" disabled="true" target="css=#primary h1" value="Your Shopping Cart"/>
</scriptmodule>
