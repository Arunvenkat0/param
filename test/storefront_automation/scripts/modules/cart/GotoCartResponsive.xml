<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Navigates to the cart view using the cart link within the page header. Adapted to responsive design.</description>
  <command name="waitForElementPresent" target="css=.mini-cart-link">
    <comment>Wait for the cart link.</comment>
  </command>
  <action name="GoToCart"/>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.mini-cart-link"/>
  </module>
  <module name="library.function.FAssertTextCaseInsensitive">
    <parameter name="textElement" value="xpath=id('primary')/h1"/>
    <parameter name="plainString" value="Your Shopping Cart"/>
  </module>
</scriptmodule>