<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Removes one of the products.

@TableRow = row of the element to be deleted</description>
  <parameter name="TableRow"/>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.cart-row:nth-child(@{TableRow}) .item-user-actions button"/>
  </module>
  <command name="clickAndWait" disabled="true" target="css=.cart-row:nth-child(@{TableRow}) .item-user-actions button">
    <comment>Click the remove button in the given table row.</comment>
  </command>
</scriptmodule>
