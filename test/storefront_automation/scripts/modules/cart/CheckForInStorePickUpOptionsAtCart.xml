<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Validates at the cart page the additional column with the delivery options.</description>
  <module name="library.function.FAssertCaseInsensitiveTextOnPage">
    <parameter name="text" value="Delivery Options"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.cart-row:nth-child(1) .item-delivery-options .home-delivery"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.cart-row:nth-child(1) .item-delivery-options .instore-delivery"/>
  </module>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="link=Select Store"/>
  </module>
</scriptmodule>