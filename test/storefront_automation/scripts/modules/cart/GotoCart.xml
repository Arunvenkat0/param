<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Navigates to the cart view using the cart link within the page header.</description>
  <module name="library.function.FAssertElementPresent">
    <parameter name="assertedElement" value="css=.mini-cart-link"/>
  </module>
  <action name="ClickCartLink"/>
  <module name="library.function.FClickAndWaitForPageLoad">
    <parameter name="clickElement" value="css=.mini-cart-link"/>
  </module>
  <module name="library.function.FAssertTextCaseInsensitive">
    <parameter name="textElement" value="css=.breadcrumb-last"/>
    <parameter name="plainString" value="Cart"/>
  </module>
  <module name="library.function.FAssertTextCaseInsensitive">
    <parameter name="textElement" value="xpath=id('primary')/h1"/>
    <parameter name="plainString" value="Your Shopping Cart"/>
  </module>
  <command name="assertText" target="xpath=id('primary')/h1" value="Your Shopping Cart"/>
</scriptmodule>