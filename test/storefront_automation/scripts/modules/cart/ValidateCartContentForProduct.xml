<?xml version="1.0" encoding="UTF-8" ?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Validates the product data within the cart.

@Parameters:
Name: Name of the product
SinglePrice: Price for the single product
TotalPriceProduct: Quantity * SinglePrice
Quantity: Quantity of the product
TableRow: Row number in which the item resides</description>
  <parameter name="Name"/>
  <parameter name="SinglePrice"/>
  <parameter name="TotalPriceProduct"/>
  <parameter name="Quantity"/>
  <parameter name="TableRow"/>
  <module name="library.function.FWaitForTextCaseInsensitive">
    <parameter name="textElement" value="css=.cart-row:nth-child(@{TableRow}) .name"/>
    <parameter name="plainString" value="@{Name}"/>
  </module>
  <command name="waitForValue" target="css=.cart-row:nth-child(@{TableRow}) .item-quantity input" value="@{Quantity}">
    <comment>Validate the quantity within the cart.</comment>
  </command>
  <module name="library.function.FWaitForTextCaseInsensitive">
    <parameter name="textElement" value="css=.cart-row:nth-child(@{TableRow}) .item-price span"/>
    <parameter name="plainString" value="@{SinglePrice}"/>
  </module>
  <module name="library.function.FAssertText">
    <parameter name="textElement" value="css=.cart-row:nth-child(@{TableRow}) .price-total"/>
    <parameter name="textPattern" value="@{TotalPriceProduct}"/>
  </module>
</scriptmodule>
