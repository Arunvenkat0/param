<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule xmlns="http://xlt.xceptance.com/xlt-script/2" version="4">
  <description>Enters the given search text into the search entry field.</description>
  <parameter name="SearchText"/>
  <command name="waitForElementPresent" target="name=simpleSearch">
    <comment>Wait for the search field</comment>
  </command>
  <module name="library.function.FType">
    <parameter name="typeElement" value="id=q"/>
    <parameter name="inputString" value="@{SearchText}"/>
  </module>
  <action name="SubmitSearch"/>
  <command name="clickAndWait" target="css=input[value='go']">
    <comment>Start searching using the search button</comment>
  </command>
</scriptmodule>