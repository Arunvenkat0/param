<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Validates the result page after entering an invalid search phrase.</description>
  <parameter name="InvalidSearchEntry"/>
  <module name="modules.search.InsertSearchText">
    <parameter name="SearchText" value="@{InvalidSearchEntry}"/>
  </module>
  <command name="assertText" target="css=#primary h1" value="Search Results"/>
  <command name="assertText" target="css=.no-hits-search-term" value="@{InvalidSearchEntry}">
    <comment>Checks if invalid search phrase is used within error message.</comment>
  </command>
</scriptmodule>