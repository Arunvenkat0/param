<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>This modul checks the functionality of the gift certificates form for:
a)mandatory fields
b)valid email and confirm email fields
c)email equals confirm email
d)amount x must be:  $5 &lt;= x &lt;= $5000</description>
  <parameter name="Donor"/>
  <parameter name="FriendName"/>
  <parameter name="Email"/>
  <parameter name="Message"/>
  <parameter name="Amount"/>
  <module name="modules.giftcertificate.ValidateMandatoryFieldsForGiftCertificates">
    <parameter name="Donor" value="@{Donor}"/>
    <parameter name="FriendName" value="@{FriendName}"/>
    <parameter name="Email" value="@{Email}"/>
    <parameter name="Message" value="@{Message}"/>
    <parameter name="Amount" value="@{Amount}"/>
  </module>
  <module name="modules.giftcertificate.ValidateValidEmailForGiftCertificates">
    <parameter name="Email" value="@{Email}"/>
  </module>
  <module name="modules.giftcertificate.ValidateEqualEmailForGiftCertificates">
    <parameter name="Email" value="@{Email}"/>
  </module>
  <module name="modules.giftcertificate.ValidateCorrectAmountForGiftCertificates"/>
</scriptmodule>