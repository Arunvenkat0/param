<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks if valid email addresses are required.</description>
  <parameter name="Email"/>
  <action name="EnterFirstInvalidMail"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_recipientEmail" value="abcde"/>
  <action name="Try2Add2Basket"/>
  <command name="click" target="id=AddToBasketButton"/>
  <command name="waitForText" target="css=#dwfrm_giftcert_purchase_recipientEmail + span" value="The email address is invalid."/>
  <command name="type" target="id=dwfrm_giftcert_purchase_recipientEmail" value="@{Email}"/>
  <action name="EnterConfirmationInvalidMail"/>
  <command name="type" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="abcde"/>
  <action name="Try2Add2Basket"/>
  <command name="click" target="id=AddToBasketButton"/>
  <command name="waitForText" target="css=#dwfrm_giftcert_purchase_confirmRecipientEmail + span" value="The email address is invalid."/>
  <command name="type" target="id=dwfrm_giftcert_purchase_confirmRecipientEmail" value="@{Email}"/>
</scriptmodule>