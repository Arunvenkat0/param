<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Checks a displayed address at the given position for:
- Title
- FirstName
- LastName
- Address
- City
- StateShort
- ZipCode
- Country
- Phone</description>
  <parameter name="Position"/>
  <parameter name="Title"/>
  <parameter name="FirstName"/>
  <parameter name="LastName"/>
  <parameter name="Address"/>
  <parameter name="City"/>
  <parameter name="StateShort"/>
  <parameter name="Zip"/>
  <parameter name="Country"/>
  <parameter name="Phone"/>
  <command name="waitForText" target="css=.address-list li:nth-child(@{Position}) .mini-address-title" value="@{Title}"/>
  <command name="assertText" target="css=.address-list li:nth-child(@{Position}) .mini-address-name" value="@{FirstName} @{LastName}"/>
  <command name="waitForElementPresent" target="css=.mini-address-location"/>
  <command name="assertText" target="css=.address-list li:nth-child(@{Position}) .mini-address-location" value="glob:@{Address} @{City}, @{StateShort} @{Zip} @{Country} Phone: @{Phone} "/>
</scriptmodule>