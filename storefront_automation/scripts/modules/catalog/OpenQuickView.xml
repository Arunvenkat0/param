<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Selects a product inside a catalog and opens it's quick view dialoge.</description>
  <parameter name="ProductName"/>
  <command name="waitForElementPresent" target="xpath=//div[@class='product-name']//a[@title=&quot;@{ProductName}&quot;]">
    <comment>Validate Product Presence</comment>
  </command>
  <command name="mouseOver" target="xpath=//div[@class='product-image']/a[@title='@{ProductName}']"/>
  <command name="waitForElementPresent" target="xpath=id('quickviewbutton')[@title='@{ProductName}']"/>
  <command name="click" target="xpath=id('quickviewbutton')[@title='@{ProductName}']"/>
  <command name="waitForElementPresent" target="id=#QuickViewDialog"/>
  <command name="waitForText" target="css=.ui-dialog .product-name" value="@{ProductName}"/>
</scriptmodule>