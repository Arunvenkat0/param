<?xml version="1.0" encoding="UTF-8"?>
<scriptmodule version="3" xmlns="http://xlt.xceptance.com/xlt-script/2">
  <description>Select and validate the presence of images for the selected product</description>
  <parameter name="ImageNumber1"/>
  <parameter name="ImageNumber2"/>
  <command name="waitForElementPresent" target="css=.product-thumbnails li:nth-child(1) img"/>
  <command name="assertElementPresent" target="css=.product-thumbnails li:nth-child(2) img"/>
  <command name="click" target="css=.product-thumbnails li:nth-child(2) img"/>
  <command name="waitForElementPresent" target="css=.primary-image[src*=&quot;@{ImageNumber2}&quot;]"/>
  <command name="click" target="css=.product-thumbnails li:nth-child(1) img"/>
  <command name="waitForElementPresent" target="css=.primary-image[src*=&quot;@{ImageNumber1}&quot;]"/>
</scriptmodule>